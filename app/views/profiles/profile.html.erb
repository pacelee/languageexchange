<div class="container">
<div class="row">
<h2 class="ui center aligned icon header">
  <i style="color:white;" class="user icon"></i>
  <center><h2 style="color:white"><%= @profile.tutor %></h2></center>
</h2>
</div>
<center>
<%= image_tag @profile.avatar.url(:thumb) %>
</center>
<br>
  <div class="row">
    <table class="ui inverted grey table">
      <thead>
        <th>Online</th>
        <th>Skype ID</th>
        <th>Hourly Rate (HKD)</th>
        <th>Full-time/Part-time</th>
      </thead>
      <tbody>
        <tr>
          <td> <% if @profile.online %>
                Yes
               <% else %>
                No
               <% end %> </td>
          <td> <%= @profile.skype %> </td>
          <td> <%= @profile.rate %> </td>
          <td> <%= @profile.nature %> </td>
        </tr>
      </tbody>
    </table>
  </div>
  <br>
  <div class="row">
    <table class="ui inverted grey table">
      <thead>
        <tr>
          <th>Teaching</th>
          <th>Learning</th>
          <th>Gender</th>
          <th>Teaching Regions</th>
          <th>Email </th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td> <%= @profile.teaching %></td>
          <td> <%= @profile.learning %></td>
          <td> <% if @profile.is_male %>
                Male
               <% else %>
                Female
               <% end %> </td>
          <td> <%= @profile.teaching_regions %></td>
          <td> <%= @profile.email %> </td>
        </tr>
      </tbody>
    </table>
    </div>
    <br>
    <br>

    <% if @profile.user_id != current_user.id %>
    <div class="item">
      <div class="content">
        <div class="ui huge blue button"><%= link_to "Message me!", conversations_path(sender_id: current_user.id, recipient_id: @profile.user_id), method: "post"%></div>
      </div>
    </div>
      <br>
  <% end %>
</div>

<br>
<br>
<br>
